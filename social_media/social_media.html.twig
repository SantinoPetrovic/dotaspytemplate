{# app/Resources/views/social_media/social_media.html.twig #}
{% extends 'base.html.twig' %}
{% block body %}

    <div class="playerContent grid">
        {# script for facebook #}
        <div id="fb-root"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=906008279464404";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
        <div class="grid-item playerInfo">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 playerHeaderTextContent">
                {% for result5 in results5 %}
                <h1 class="playerHeaderText">{{result5.nickname}}</h1>
                {% endfor %}
            </div>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 playerImageContent centerText">
                {% for result5 in results5 %}
                <img class="socialMediaImage playerImage" src="/ajax/playerImages/{{result5.image_url}}">
                {% endfor %}
            </div>
            {% for result3 in results3 %}
                {% if result3 is not empty %}
                    {% include 'social_media/playerInformation.html.twig' %}
                {% else %}
                        <p>There is no info about this player.</p>
                {% endif %}
            {% endfor %}
        </div>

        <div class="grid-item grid-item--width2 grid-item--height2" id="twitterContent">
        	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 centerText">
			<img class="socialMediaImage col-xs-6 col-sm-4 col-md-4 col-lg-4 twitterImage" src="http://46.101.160.201:8000/img/twitter.png">
		</div>
        {% for result1 in results1 %}
            {% if result1 is not empty %}
                <div>
                {% include 'social_media/twitterPlugin.html.twig' %}
                </div>
            {% else %}
                <p>This user doesn't have a twitter account.</p>
            {% endif %}
        {% endfor %}
        </div>

        <div class="grid-item grid-item--width2 grid-item--height2 facebookDesktop" id="facebookContent">
	        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 centerText">
	        	<img class="socialMediaImage col-xs-6 col-sm-4 col-md-4 col-lg-4" src="http://46.101.160.201:8000/img/facebook.png">
	        </div>
        {% for result2 in results2 %}
            {% if result2.facebook_id is not empty %}
                {% include 'social_media/facebookPlugin.html.twig' %}
            {% else %}
                    <p class="col-lg-12">This user doesn't have a facebook account.</p>
            {% endif %}
        {% endfor %}
        </div>

        <div class="grid-item grid-item--width2 grid-item--height2 latestMatchesContent">
        	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 centerText">
            	<img class="socialMediaImage col-xs-6 col-sm-4 col-md-4 col-lg-4" src="http://46.101.160.201:8000/img/dota2.png">
            </div>
            {% for result4 in results4 %}
                {% if result4 is not empty %}
                    <a class="matchLink" href="http://www.dotabuff.com/matches/{{result4.matchID}}">
                    {% include 'social_media/latestMatchesPlugin.html.twig' %}
                    </a>
                {% else %}
                    <p>There is none latest matches right now.</p>
                {% endif %}
            {% endfor %}
        </div>
        <div class="grid-item" id="twitchContent">
        	<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 centerText">
            	<img class="socialMediaImage col-xs-6 col-sm-4 col-md-4 col-lg-4" src="http://46.101.160.201:8000/img/twitch.png">
            </div>
            {% for result2 in results2 %}
                {% if result2.twitch_id is not empty %}
                    {% include 'social_media/twitchPlugin.html.twig' %}
                {% else %}
                    <p class="col-lg-12" style="text-align:center;">This user doesn't have a twitch account.</p>
                {% endif %}
            {% endfor %}
        </div>

        <div class="grid-item centerText" id="redditContent">
            <img class="socialMediaImage redditImage col-xs-6 col-sm-4 col-md-4 col-lg-4" src="http://46.101.160.201:8000/img/reddit.png">
        {% for result8 in results8 %}
            {% if result8 is not empty %}
                {% include 'social_media/redditPlugin.html.twig' %}
            {% else %}
                <p>This user doesn't have new reddit posts.</p>
            {% endif %}
        {% endfor %}
        </div>
        <div class="grid-item centerText">
        	<img class="socialMediaImage col-xs-6 col-sm-4 col-md-4 col-lg-4" src="http://46.101.160.201:8000/img/oddshot.png">
            {% for result6 in results6 %}
                    {% if result6 is not empty %}
                        {% include 'social_media/oddshotPlugin.html.twig' %}
                    
                    {% endif %}
            {% endfor %}
        </div>
        <div class="grid-item centerText" id="gosugamersContent">
            <img class="socialMediaImage gosugamersImage col-xs-6 col-sm-4 col-md-4 col-lg-4" src="http://46.101.160.201:8000/img/gosugamers.png">
            {% for result9 in results9 %}
                    {% if result9 is not empty %}
                    {% include 'social_media/gosugamersPlugin.html.twig' %}
                    {% endif %}
            {% endfor %}
        </div>
    </div>

{% endblock %}