<div class="hidden-sm hidden-md hidden-lg playerContent">
    {# script for facebook #}
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.5&appId=906008279464404";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    <div class="col-xs-10 playerInfo">
    {% for result3 in results3 %}
        {% if result3 is not empty %}
            {% include 'social_media/playerInformation.html.twig' %}
